<div class="d-flex justify-content-between align-items-center mb-4">
  <h2 class="mb-0"><%= title || "Featured Products" %></h2>
  <div class="btn-group">
    <%= link_to store_path, class: "btn btn-outline-primary #{'active' unless params[:filter]}" do %>
      <i class="fas fa-th-large me-1"></i> All
    <% end %>
    <%= link_to store_new_products_path, class: "btn btn-outline-primary #{'active' if params[:filter] == 'new'}" do %>
      <i class="fas fa-fire me-1"></i> New
    <% end %>
    <%= link_to store_on_sale_path, class: "btn btn-outline-primary #{'active' if params[:filter] == 'sale'}" do %>
      <i class="fas fa-tags me-1"></i> Sale
    <% end %>
  </div>
</div>
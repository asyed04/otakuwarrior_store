<div class="row mb-3 mb-md-4">
  <div class="col-12">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb flex-wrap">
        <li class="breadcrumb-item"><%= link_to "Home", store_path %></li>
        <% items.each_with_index do |item, index| %>
          <% if index == items.size - 1 %>
            <li class="breadcrumb-item active text-truncate" aria-current="page" style="max-width: 200px;"><%= item[:text] %></li>
          <% else %>
            <li class="breadcrumb-item text-truncate" style="max-width: 150px;"><%= link_to item[:text], item[:url] %></li>
          <% end %>
        <% end %>
      </ol>
    </nav>
  </div>
</div>
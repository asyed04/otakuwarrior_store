<h2>Edit Profile</h2>

<div class="card mb-4">
  <div class="card-header">
    <h5>Account Information</h5>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-3">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="alert alert-info">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <h5 class="mt-4">Address Information</h5>
      <hr>

      <div class="field mb-3">
        <%= f.label :address %><br />
        <%= f.text_field :address, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :city %><br />
        <%= f.text_field :city, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :province_id, "Province" %><br />
        <%= f.collection_select :province_id, Province.order(:name), :id, :name, 
                              { include_blank: "Select Province" }, 
                              { class: "form-select" } %>
      </div>

      <h5 class="mt-4">Change Password</h5>
      <hr>

      <div class="field mb-3">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
        <% end %>
      </div>

      <div class="field mb-3">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= f.label :current_password %> <i>(required to confirm your changes)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Update Profile", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<div class="card mb-4">
  <div class="card-header bg-danger text-white">
    <h5>Danger Zone</h5>
  </div>
  <div class="card-body">
    <h5>Cancel my account</h5>
    <p>This action cannot be undone. All your data will be permanently deleted.</p>
    <%= button_to "Delete My Account", registration_path(resource_name), 
                data: { confirm: "Are you sure? This cannot be undone.", turbo_confirm: "Are you sure? This cannot be undone." }, 
                method: :delete, 
                class: "btn btn-danger" %>
  </div>
</div>

<div class="mt-3">
  <%= link_to "← Back", :back, class: "btn btn-secondary" %>
</div>
